  /newEvent:
    post:
      tags:
      - "event"
      description: "Додавання нової події в календар"
      operationId: "addEvent"
      consumes:
      - "application/json"
      - "application/xml"
      produces:
      - "application/xml"
      - "application/json"
      parameters:
      - name: "inEvent"
        in: "query"
        description: "Подія, що має бути доданою."
        type: "string" 
      responses:
        405:
          description: "Неправильний ввід даних"
      security:
      - calendar_auth:
        - "write:calendar"
        - "read:calendar"
    put:
      tags:
      - "event"
      summary: "Редагування події"
      description: "Редагування події"
      operationId: "updateEvent"
      consumes:
      - "application/json"
      - "application/xml"
      produces:
      - "application/xml"
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        description: "Редагована подія."
        required: true
        schema:
          $ref: "#/definitions/Event"
      responses:
        404:
          description: "Не знайдено подій"
        405:
          description: "Помилка валідації"
      security:
      - calendar_auth:
        - "write:calendar"
        - "read:calendar"
  /calendar/find:
    get:
      tags:
